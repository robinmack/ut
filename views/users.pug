extends menuBar
append body
    
    table.table.table-striped
        thead
            tr
                th Username
                th Email
                th Role
                th Actions
        tbody
            each user in users
                tr
                    td #{user.username}
                    td #{user.email}
                    td #{user.role}
                    td 
                        a(href="/users/edit/" + user.id) edit
                        |
                        a(href="/users/delete/" + user.id) delete
                